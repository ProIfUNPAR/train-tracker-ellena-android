<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.administrator.myapplication.Main3Activity"
        android:layout_below="@id/sw_alarm"/>
    <Spinner
        android:id="@+id/kereta_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/direction_margin"
        android:layout_marginBottom="@dimen/direction_margin"
        android:layout_marginRight="@dimen/direction_margin_right"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:id="@+id/stasiun_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/direction_margin"
        android:layout_marginBottom="@dimen/direction_margin"
        android:layout_below="@id/kereta_list">
        <Spinner
            android:id="@+id/asal_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/direction_margin_right"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/tujuan_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/direction_margin_right"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stasiun_list"
        android:layout_marginTop="@dimen/direction_margin"
        android:text="@string/search_btn_text"/>
    <Switch
        android:id="@+id/sw_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_search"
        android:layout_alignParentRight="true"
        android:text="@string/alarm_tv"
       />
</RelativeLayout>